<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<GameTooltip name="GlueTooltipTemplate" inherits="SharedTooltipTemplate" virtual="true">
		<KeyValues>
			<KeyValue key="textLeft1Font" value="GlueFontNormal" type="string"/>
			<KeyValue key="textRight1Font" value="GlueFontNormal" type="string"/>
			<KeyValue key="textLeft2Font" value="GlueFontNormalSmall" type="string"/>
			<KeyValue key="textRight2Font" value="GlueFontNormalSmall" type="string"/>
		</KeyValues>
	</GameTooltip>

	<GameTooltip name="GlueTooltip" inherits="GlueTooltipTemplate" parent="GlueParent" />

	<GameTooltip name="GlueNoHeaderTooltip" inherits="GlueTooltipTemplate" parent="GlueParent">
		<KeyValues>
			<KeyValue key="textLeft1Font" value="GlueFontNormalSmall" type="string"/>
			<KeyValue key="textRight1Font" value="GlueFontNormalSmall" type="string"/>
			<KeyValue key="textLeft2Font" value="GlueFontNormalSmall" type="string"/>
			<KeyValue key="textRight2Font" value="GlueFontNormalSmall" type="string"/>
		</KeyValues>
	</GameTooltip>

	<GameTooltip name="GlueTrueScaleTooltip" inherits="GlueTooltipTemplate" parent="GlueParent" scale="0.7111">
		<KeyValues>
			<KeyValue key="textLeft1Font" value="GameFontNormalLarge2" type="string"/>
			<KeyValue key="textRight1Font" value="GameFontNormalLarge2" type="string"/>
			<KeyValue key="textLeft2Font" value="GameFontNormalMed3" type="string"/>
			<KeyValue key="textRight2Font" value="GameFontNormalMed3" type="string"/>
		</KeyValues>
	</GameTooltip>

	<GameTooltip name="GlueTrueScaleNoHeaderTooltip" inherits="GlueTooltipTemplate" parent="GlueParent" scale="0.7111">
		<KeyValues>
			<KeyValue key="textLeft1Font" value="GameFontNormalMed3" type="string"/>
			<KeyValue key="textRight1Font" value="GameFontNormalMed3" type="string"/>
			<KeyValue key="textLeft2Font" value="GameFontNormalMed3" type="string"/>
			<KeyValue key="textRight2Font" value="GameFontNormalMed3" type="string"/>
		</KeyValues>
	</GameTooltip>
</Ui>
